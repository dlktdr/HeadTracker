/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "Arduino Nano 33 BLE Sense Rev2";
	compatible = "arduino,arduino_nano_33_ble_sense_r2";

	chosen {
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &code_partition;
	};

	aliases {
		adcctrl = &adc;
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "sam-ba";
			reg = <0x00000000 0x00010000>;
			read-only;
		};

		code_partition: partition@10000 {
			label = "code";
			reg = <0x10000 0xEC000>;
			read-only;
		};

    datapt_partition: partition@FC000 {
        label = "datapt";
        reg = <0xFC000 0x4000>;
    };
	};
};

/*
 * guide specifying pin numbers: https://docs.zephyrproject.org/latest/boards/arm/nrf52840dk_nrf52840/doc/index.html
 * Given Pin PB.A:
 * pin_no = B*32 + A
 * ex. P1.0 => 32
 */
&adc {
	status = "okay";
};
&uart0 {
	compatible = "nordic,nrf-uart";
	current-speed = <115200>;
	status = "okay";
	tx-pin = <35>; //P1.03
	rx-pin = <42>; //P1.10
};
&i2c0 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	sda-pin = <31>; //P0.31
	scl-pin = <2>; //P0.02
};
&i2c1 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	sda-pin = <14>; //P0.14
	scl-pin = <15>; //P0.15
  zephyr,concat-buf-size = <264>;
//  clock-frequency = <100000>;
};
&spi2 {
	compatible = "nordic,nrf-spim";
	status = "okay";
	sck-pin = <4>; //P0.04 A0
    mosi-pin = <5>; //P0.05 A1
    miso-pin = <34>; //P1.02 D10
	cs-gpios = <&gpio0 30 GPIO_ACTIVE_LOW>; //P0.30 A2

    ssd1306:ssd1306@0 {
        compatible = "solomon,ssd1306fb";
        reg = <0x0>;
		spi-max-frequency = <8000000>;
        label = "SSD1306";
        height = <64>;
        width  = <128>;
        segment-offset  = <0>;
        page-offset     = <0>;
        display-offset  = <0>;
        multiplex-ratio = <63>;
        prechargep      = <0x22>;
        segment-remap;
		data_cmd-gpios = <&gpio0 21 GPIO_ACTIVE_HIGH>;	//P0.21 D8
		reset-gpios = <&gpio0 23 GPIO_ACTIVE_LOW>;		//p0.23 D7
    };
};
&gpio0 {
	status = "okay";
};
&gpio1 {
	status = "okay";
};
zephyr_udc0: &usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
  cdc_acm_uart0 {
		compatible = "zephyr,cdc-acm-uart";
		label = "CDC_ACM_0";
	};
};
// All PWM's should be enaled
&pwm0 {
	status = "disabled";
};
&pwm1 {
	status = "disabled";
};
&pwm2 {
	status = "disabled";
};
&pwm3 {
	status = "disabled";
};
&rtc1 {
	status = "disabled";
};
&timer3 {
    status = "disabled";
};
&timer4 {
    status = "disabled";
};
